{% extends 'base.html.twig' %}

{% block body %}


<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<h2 class="text-center" style="color: #D5D0CF">
				Case n°{{numCase}} de {{case.plateau.nom}}
			</h2>
			<BR>
			<BR>
		</div>
	</div>
	<div class="row">
		<div class="col-md-2">
		</div>
		<div class="col-md-4">
			<dl>
				<dt style="color: #D5D0CF">
					Descriptif du défi
				</dt>
				<dd style="color: #D5D0CF">
					{{case.descriptifDefi}}
				</dd>				
				<dt style="color: #D5D0CF">
					Consignes
				</dt>
				<dd style="color: #D5D0CF">
					{{case.consignes}}
				</dd>

				<dt style="color: #D5D0CF">
					Code de validation activé ?
				</dt>
				<dd style="color: #D5D0CF">
					{% if case.codeValidation is null %}
					Non
					{% else %}
					Oui
					{% endif %}
				</dd>
			</dl>
		</div>
		<div class="col-md-4">
			<ul class="list-group">
			  <li class="list-group-item" style="background-color: 	#D5D0CF;">Ressources</li>

			 {% for ress in case.ressources %}
			  <li class="list-group-item list-group-item-light" style="background-color: 	#D5D0CF;">{{ress.chemin}}</li>
			 {% endfor %}

			</ul>
		</div>
		<div class="col-md-2">
		</div>
	</div>
	<div class="row">
		<div class="col-md-2">
		</div>
		<div class="col-md-6">
			<BR>
			<blockquote class="blockquote">
				<p class="mb-0" style="color: #D5D0CF">
					Dans cette version les cases ne peuvent pas être modifiés.
				</p>
				<footer class="blockquote-footer" style="color: #D5D0CF">
					L'équipe <cite>LesRoisDu</cite>
				</footer>
			</blockquote>
		</div>
		<div class="col-md-2">
			<BR>
			<a href="{{ path('plateau', {'idPlateau' : case.plateau.id}) }}" class="btn btn-danger btn-block" role="button" aria-pressed="true">Retour au plateau</a>

		</div>
		<div class="col-md-2">
		</div>
	</div>
</div>

{% endblock %}
