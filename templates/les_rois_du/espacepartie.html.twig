{% extends 'monTemplate.html.twig' %}

{% block sidebar %}
<body class="is-preload">
        <!-- Sidebar -->
            <section id="sidebar">
                <div class="inner">
                    <nav>
                        <ul>
                            <li><a href="{{path ('hub')}}">MENU</a></li>
                        </ul>
                    </nav>
                </div>
            </section>

{% endblock %}

{% block body %}
		<!-- Wrapper -->
			<div id="wrapper">

				<!-- Intro -->
					<section id="intro" class="wrapper style1 fullscreen fade-up">
						<div class="inner">
                            <h1>ESPACE PARTIES</h1>
                            
                            <section id="one" class="wrapper style2 spotlights">
                                    

                                    <!-- Boucle pour chaque partie  -->
                                    {% for partie in parties %}
                                    <section>
                                            <a href="#" class="image"><img src="img/LesRoisDuBad.png" alt="" data-position="center center" /></a>
                                            <div class="content">
                                                <div class="inner">
                                                    <h2> {{ partie.nom }}</h2>
                                                    <p>{{ partie.description }} </p>
                                                    <ul class="actions">
                                                        <li><a href="{{path ('partie_en_cours', {'idPartie': partie.id}) }}" class="button">Consulter</a></li>
                                                        <li><a href="{{path ('espace_partie') }}" class="button">Supprimer</a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </section>
    
                                        <!-- Fin boucle -->
                                        {% endfor %}
    
                            </div>
                        </section>


						</div>
					</section>

			</div>
{% endblock %}