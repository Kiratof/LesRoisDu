{% extends 'monTemplate.html.twig' %}


  {% block body %}
  <!-- Wrapper -->
  <div id="wrapper">

    <!-- Intro -->
    <section id="partie" class="wrapper style1 fullscreen fade-up">
      <div class="inner">

        {% if action == 'creer' %}
        <h1>CREER UNE PARTIE</h1>
        <section id="three" class="wrapper style1 fade-up">
          <div class="inner">

            {{form_start(vueFormulaireCreationPartie) }}
            {{ form_row(vueFormulaireCreationPartie.nom)}}
            {{ form_row(vueFormulaireCreationPartie.description)}}
            {{ form_row(vueFormulaireCreationPartie.plateau, { 'label' : 'Plateau(x)' })}}
            {{form_row(vueFormulaireCreationPartie.Valider, {'attr': {'class': 'button scrolly'}}) }}
            {{form_end(vueFormulaireCreationPartie)}}
            <div class="row">
              <div class="col-md-12">
                <a href="{{ path('hub')}}" class="button scrolly">Annuler</a>
              </div>
            </div>
          </div>



          {%else%}

          <h1>MODIFIER UNE PARTIE</h1>
          <section id="three" class="wrapper style1 fade-up">
            <div class="inner">

              {{form_start(vueFormulaireCreationPartie) }}
              {{ form_row(vueFormulaireCreationPartie.nom)}}
              {{ form_row(vueFormulaireCreationPartie.description)}}
              {{ form_row(vueFormulaireCreationPartie.plateau, { 'label' : 'Plateau(x)' })}}
              {{ form_row(vueFormulaireCreationPartie.Valider, {'attr': {'class': 'button scrolly'}}) }}
              {{form_end(vueFormulaireCreationPartie)}}
              <div class="row">
                <div class="col-md-12">
                  <a href="{{ path('hub')}}" class="button scrolly">Annuler</a>
                </div>
              </div>

              {%endif%}

            </div>
          </section>
        </div>
        {% endblock %}


        {% block footer %}
        {% endblock %}
