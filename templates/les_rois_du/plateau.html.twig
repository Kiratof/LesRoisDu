{% extends 'monTemplate.html.twig' %}

{% block sidebar %}
<!-- Sidebar -->
<section id="sidebar">
  <div class="inner">
    <nav>
      <ul>
        {% for plat in plateaux %}
        <li><a href="{{ path('plateau', {'idPlateau' : plat.id}) }}">{{plat.nom}}</a></li>
        {%endfor%}
      </ul>
    </nav>
  </div>
</section>

{% endblock %}
{% block body %}
<div id="wrapper">
  <section class="wrapper style1 fullscreen fade-up">

    <div class="row">
      <div class="col-md-12">
        {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible show" role="alert">
          {{message}}
          <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
        </div>
        {% endfor %}
      </div>
    </div>

    <div class="plateau-container">
      <h2 class="plateau-container__heading">{{plateau.nom}}</h2>
      <p hidden id="idPlateau">{{ plateau.id }}</p>
      <p hidden id="baseDir">{{ asset('tilemap/') }}</p>
      <div class="plateau-container__plateau" id="plateau-1"></div>
      <p class="plateau-container__texte"> Vous pouvez accéder aux défis de ce plateau en cliquant sur ses cases. </p>
      <div class="plateau-container__button">
        <a role="button" href="{{ path('parametres_plateau', {'idPlateau' : plateau.id}) }}" class="btn button scrolly">Paramètres</a>
        <a role="button" href="{{ path('espace_plateau') }}" class="btn button scrolly">Espace plateau</a>
      </div>
    </div>

  </section>
</div>

<script type="text/javascript" src="{{asset('tilemap/js/classes/XmlHttpRequest.js')}}"></script>
<script type="text/javascript" src="{{asset('tilemap/js/classes/Api.js')}}"></script>
<script type="text/javascript" src="{{asset('tilemap/js/classes/Graphics.js')}}"></script>
<script type="text/javascript" src="{{asset('tilemap/js/classes/ToolBox.js')}}"></script>
<script type="text/javascript" src="{{asset('tilemap/js/classes/Background.js')}}"></script>
<script type="text/javascript" src="{{asset('tilemap/js/classes/Mouse.js')}}"></script>
<script type="text/javascript" src="{{asset('tilemap/js/classes/Input.js')}}"></script>
<script type="text/javascript" src="{{asset('tilemap/js/classes/Resize.js')}}"></script>
<script type="text/javascript" src="{{asset('tilemap/js/classes/Element.js')}}"></script>
<script type="text/javascript" src="{{asset('tilemap/js/classes/Parcours.js')}}"></script>
<script type="text/javascript" src="{{asset('tilemap/js/classes/Case.js')}}"></script>
<script type="text/javascript" src="{{asset('tilemap/js/classes/Map.js')}}"></script>
<script type="text/javascript" src="{{asset('tilemap/js/plateau/SceneGameplayPlateau.js')}}"></script>
<script type="text/javascript" src="{{asset('tilemap/js/plateau/MainGamePlateau.js')}}"></script>

{% endblock %}
