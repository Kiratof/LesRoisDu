{% extends 'monTemplate.html.twig' %}

{% block sidebar %}

<body class="is-preload">
	<!-- Sidebar -->
	<section id="sidebar">
		<div class="inner">
			<nav>
				<ul>
					<li><a href="{{ path('partie_en_cours', {'idPartie' : partie.id}) }}">RETOUR à la partie</a></li>
					<li><a href="{{path ('app_logout')}}">SE DECONNECTER</a></li>
				</ul>
			</nav>
		</div>
	</section>

	{% endblock %}

	{% block body %}
	<!-- Wrapper -->
	<div id="wrapper">

		<!-- Intro -->
		<section id="intro" class="wrapper style1 fullscreen fade-up">

			<div class="inner">
				<div class="container-fluid">
					<div class="row">
						<div class="col-md-12">
							<h2 class="text-center">
								Paramètres {{partie.nom}}
							</h2>

						</div>
					</div>
					<BR>
					<div class="row">

						<div class="col-md-6">

							<a href="{{ path('modification_parties', {'idPartie' : partie.id}) }}" class="button scrolly">MODIFIER LA PARTIE</a>
						</div>
<div class="col-md-1">
					</div>

						<div class="col-md-3">
							<div class="alert alert-warning" style="display: none">

								<h4 class="alert-heading">Attention!</h4>
								<p>Êtes-vous sûr de vouloir supprimer la partie ?</p>

								<a style="color:aliceblue" class="btn btn-danger fermeture" role="button"
									aria-pressed="true">Non</a>
								<a href="{{ path('supprimer_partie', {'idPartie' : partie.id}) }}"
									class="btn btn-success" role="button" aria-pressed="true">Oui</a>


							</div>
							<input type="button" class="btn button scrolly" value="Supprimer la partie">
						</div>
						<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
						<script>
							$(function () {
								$("input.btn").click(function () {
									$("input.btn").hide("slow")
									$(".alert").show("slow")
								})
								$(".fermeture").click(function () {
									$(".alert").hide("slow")
									$("input.btn").show()
								})
							})
						</script>
					</div>

					<div class="col-md-2">
					</div>
				</div>
				<BR>

				<div class="row">
					<div class="col-md-1">
					</div>

					<div class="col-md-4">
						<h4> Nom de la partie </h4>
						{{partie.nom}}<br> <br>

						<h4> Nombre de plateaux </h4>
						{{partie.nbPlateaux}}<br> <br>

					</div>

					<div class="col-md-2">
					</div>

					<div class="col-md-3">
						<h4> Description du plateau </h4>
						{{partie.description}}<br> <br>

						<h4> Code d'invitation </h4>
						{{partie.code}}<br> <br>
					</div>

					<div class="col-md-2">
					</div>
				</div>

				<div class="row">

					<div class="col-md-2">

					</div>
					<div class="col-md-2">
						<BR><BR>
                        <a href="{{ path('partie_en_cours', {'idPartie' : partie.id}) }}"> Retourner à la partie </a>
					</div>

					<div class="col-md-2">
					</div>
				</div>
			</div>
	</section>
	</div>
	{% endblock %}
